@model IEnumerable<SREA.Models.Dia_Apartado>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista de Dias Reservados</h2>

<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Solicitud.Tema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Apartada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora_Comienzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora_Terminado)
        </th>
        <th>Opciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Solicitud.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Apartada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora_Comienzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora_Terminado)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.ID_Dia_Apartado }) 
            </td>
        </tr>
    }

</table>
<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Dia_Apartado")'">Regresar</button>
</div>