@model IEnumerable<SREA.Models.Solicitud>

@{
    ViewBag.Title = "Solicitudes - Lista";
}

<h2>Lista</h2>


<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Persona.Nick)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salon.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad_Inscritos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Solicitud)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Persona.Nick)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salon.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad_Inscritos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Solicitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.ID_Solicitud })
            </td>
        </tr>
    }

</table>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Solicitudes")'">Regresar</button>